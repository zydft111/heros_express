<%- include('./public/header.ejs') %>
  <div class="container hero-list">
    <form id="form">
      <div class="form-group">
        <label>英雄名称</label>
        <input type="text" name="name" class="form-control" placeholder="请输入英雄名称">
      </div>
      <div class="form-group">
        <label>英雄性别</label>
        <div class="radio">
          <label>
            <input type="radio" name="gender" value="男" checked>男
          </label>
          <label>
            <input type="radio" name="gender" value="女">女
          </label>
        </div>
      </div>
      <div class="form-group">
        <label>英雄年龄</label>
        <input type="text" name="age" class="form-control" placeholder="请输入英雄年龄">
      </div>
      <div class="form-group">
        <label>英雄地址</label>
        <input type="text" name="adress" class="form-control" placeholder="请输入英雄地址">
      </div>
      <div class="form-group">
        <label>英雄电话</label>
        <input type="text" name="phone" class="form-control" placeholder="请输入英雄电话">
      </div>
      <button type="submit" class="btn btn-success">点击保存</button>
    </form>
  </div>
  <script src="../node_modules/jQuery/dist/jquery.js"></script>
</body>
    <script>
      $('.btn-success').click(function(e){
        e.preventDefault();
        console.log($('#form').serialize())
        $.post({
          url: '/addHero',
          data: $('#form').serialize(),
          processData:false,
          success: function(res){
            if(res.code == 200){
              location.href = './'
            }
          }
        })
      })
    </script>
</html>

